<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/codeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/code_background"
    android:paddingBottom="@dimen/dimen_16_dp">

    <TextView
        android:id="@+id/codeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/code_title_background"
        android:padding="@dimen/dimen_16_dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hi Title" />

    <TextView
        android:id="@+id/codeBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16_dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/codeTitle"
        tools:text="Hi Body" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imageViewPlay"
        android:layout_width="@dimen/dimen_code_play_button_height"
        android:layout_height="@dimen/dimen_code_play_button_width"
        android:layout_marginTop="@dimen/spacing_4x"
        android:layout_marginEnd="@dimen/spacing_4x"
        android:background="@drawable/round_button_rad_8_dp"
        android:gravity="center"
        android:text="@string/run_code"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:visibility="gone"
        app:backgroundTint="@color/run_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/codeBody"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
