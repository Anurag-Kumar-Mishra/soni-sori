<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="org.navgurukul.learn.ui.learn.LearnViewModel" />

        <variable
            name="itemOnClick"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.learn.CourseDetailActivity"
        tools:showIn="@layout/activity_course_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCourseDetail"
                    style="@style/course_content_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewCourseDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCourseDetail"
                    android:layout_marginTop="@dimen/dimen_5_dp"
                    android:layout_marginBottom="@dimen/navigation_bar_height"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_course_exercise" />
            </RelativeLayout>

            <br.tiagohm.markdownview.MarkdownView
                android:id="@+id/markDownContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_10_dp"
                android:padding="@dimen/dimen_10_dp"
                android:visibility="gone"
                app:escapeHtml="false" />

            <include
                android:id="@+id/progressBar"
                layout="@layout/component_progress_bar"
                android:visibility="@{viewmodel.showLoadingIndicator ? View.VISIBLE : View.GONE}" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>